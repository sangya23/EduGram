/* General page styling */
body {
  background: #111;
  color: #fff;
  font-family: 'Open Sans', sans-serif;
  text-align: center;
  margin: 0;
  padding: 0;
}

h1 {
  color: #4da6ff;
  text-shadow: 0 0 10px #4da6ff;
  font-size: 3.2rem;
}

/* Tabs in one line */
.pannel {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30px;
  margin: 20px 0;
}

.pannel p {
  cursor: pointer;
  opacity: 0.6;
  font-size: 2rem;
  transition: 0.3s;
}

.pannel p.active {
  opacity: 1;
  color: #4da6ff;
  text-shadow: 0 0 10px #4da6ff, 0 0 20px #3399ff;
}

/* Timer box with glow (only the clock) */
.timer {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  font-size: 4rem;
  margin: 20px auto;
  padding: 30px 60px;
  border: 2px solid #4da6ff;
  border-radius: 12px;
  background: #111;
  box-shadow: 0 0 20px #4da6ff, 0 0 40px #3399ff;
}

.timer p {
  margin: 0 10px;
}

/* Controls (buttons in one line) */
.controls {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin: 30px 0;
}

.btn {
  padding: 14px 32px;
  font-size: 1.8rem;
  background: #222;
  border: 2px solid #4da6ff;
  color: #fff;
  cursor: pointer;
  border-radius: 6px;
  transition: 0.3s;
}

.btn:hover {
  background: #4da6ff;
  color: #111;
}

.hidden {
  visibility: hidden;
}

/* Settings panel */
.settings {
  display: flex;
  justify-content: center;
  gap: 30px;
  margin-top: 30px;
  color: #fff;
}

.settings label {
  font-size: 1.4rem;
}

.settings input {
  width: 80px;
  padding: 8px;
  font-size: 1.4rem;
  background: #222;
  color: #fff;
  border: 2px solid #4da6ff;
  border-radius: 4px;
  text-align: center;
}
