:root {
  font-size: 62.5%;
  --color-primary: black;
  --color-secondary: #bedcfe;
  --color-font: #bedcfe;
  --color-shadow: #617781;
}

* { margin: 0; padding: 0; box-sizing: border-box; }

html, body {
  height: 100%;
  background-color: var(--color-primary);
  font-size: 1.6rem;
  font-family: 'Open Sans', sans-serif;
  background-image: linear-gradient(rgba(4, 9, 30, 0.7), rgba(4, 9, 30, 0.7));
}

/* Header */
.header {
  min-height: 10vh;
  width: 100%;
  background-size: cover;
  position: relative;
}

nav {
  display: flex;
  padding: 2% 6%;
  justify-content: space-between;
  align-items: center;
}

nav a h1 {
  display: inline-block;
  padding: 8px 20px;
  position: relative;
}

.nav-links { flex: 1; text-align: right; }

.nav-links ul li {
  list-style: none;
  display: inline-block;
  padding: 8px 12px;
  position: relative;
}

.nav-links ul li a {
  color: white;
  text-decoration: none;
  font-size: 13px;
}

.nav-links ul li::after {
  content: '';
  width: 0%;
  height: 2px;
  background: #bedcfe;
  display: block;
  margin: auto;
  transition: 0.5s;
}

.nav-links ul li:hover::after { width: 100%; }

/* Base text */
p, i, h1 { color: var(--color-font); cursor: pointer; }

h1::after {
  content: '';
  width: 0%;
  height: 5px;
  background: #bedcfe;
  display: block;
  margin: auto;
  transition: 0.5s;
}

h1:hover::after { width: 100%; }

i { font-size: 3.2rem; }
h1 { font-size: 3.2rem; }

/* Layout */
.container {
  width: 100%;
  padding-inline: 2rem;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/* Tabs */
.pannel {
  display: grid;
  grid-template-columns: 1fr 1fr;
  text-align: center;
  width: 20rem;
  margin-block: 1rem;
  padding: 1rem;
  border-radius: 20px;
  box-shadow: 0 0 15px 10px var(--color-shadow);
}

.pannel p { opacity: .7; transition: 0.5s ease-in; }
.pannel p.active { opacity: 1; color: var(--color-secondary); }

/* Timer display */
.timer {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30rem;
  height: 30rem;
  border-radius: 10%;
  box-shadow: 0 0 15px 10px var(--color-shadow);
}

.timerbox {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 26rem;
  height: 26rem;
  border-radius: 10%;
  background-color: var(--color-secondary);
  position: relative;
}

.timerbox::before {
  content: '';
  position: absolute;
  width: 95%;
  height: 95%;
  border-radius: 10%;
  background-color: var(--color-primary);
}

.time {
  position: relative;
  display: flex;
  flex-direction: row;
}

.time p {
  font-size: 7rem;
  font-weight: bold;
}

.time p:nth-of-type(2) {
  position: relative;
  top: -.5rem;
  margin-inline: 1rem;
}

/* Buttons */
.btn {
  margin-top: 3rem;
  border: 2px solid white;
  font-size: 16px;
  background-color: black;
  color: white;
  padding: 14px 28px;
  cursor: pointer;
  border-radius: 7px;
}

.click { border-color: #e7e7e7; color: white; transition-duration: 0.4s; }
.click:hover { transition-duration: 0.3s; background: #e7e7e7; color: black; }

/* Reset button initially visible (we control via JS) */
.controls #reset { /* you can hide/show via JS if you prefer */
  /* display: none; */
}

/* Optional logout section (not used now) */
.logout a {
  color: red;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-decoration: none;
}

.logout a:hover {
  color: white;
  font-weight: bold;
  transition: 0.3s;
}
